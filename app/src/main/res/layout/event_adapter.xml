<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:background="@color/colorFontWhite"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgv_1"
            android:layout_width="163dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginLeft="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THƯ NGỎ VUI TẾT SUM VẦY"
                android:textColor="@color/textColorPrimary"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/danhmuc" />

                <TextView

                    android:id="@+id/danhmuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hoạt động xã hội"
                    android:textColor="@color/textGray"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/thoigan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ 7:00 - 23:00, Ngày 22/01/2016"
                    android:textColor="@color/textGray"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/khuvuc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khoa nhi, Viện k3"
                    android:textColor="@color/textGray"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khoa nhi, Viện k3"
                    android:textColor="@color/textGray"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>