<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="8dp"
            android:layout_margin="5dp"
            android:id="@+id/imgv_1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tieude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THƯ NGỎ VUI TẾT SUM VẦY"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/danhmuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hoạt động xã hội"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/thoigan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Từ 7:00 - 23:00, Ngày 22/01/2016"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/khuvuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoa nhi, Viện k3"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>